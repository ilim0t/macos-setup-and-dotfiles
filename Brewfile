brew "fzf"                  # ファジーファインダー
brew "tmux"                 # ターミナル多重化
brew "tig"                  # Git TUI
brew "lazydocker"           # Docker TUI
brew "trash"                # ファイルゴミ箱移動
brew "ncdu"                 # ディスク使用量可視化
cask "warp"                 # Warp ターミナル (GPU描画)

##### 🖋️ エディタ / IDE
cask "visual-studio-code"   # VSCode
cask "cursor"               # Cursor (VSCode フォーク)

